package  {		import flash.display.MovieClip;	import flash.events.Event;		public class Model {				var grid:Grid;		var units:Array;		var view:View;				public function Model(v:View) {			this.grid = new Grid();			this.units = new Array;			this.view = v;		}				public function walkAll():void{			//array mit effektiv ausgewählten einheiten?						for each (var e:Element in grid.elementArray){				e.walk();			}					}				public function getGrid():Grid{			return grid;		}				public function createUnit(type:String, player:Player):Unit{			var unit:Unit;						switch(type){				case "rock": 	unit = new Rock(player.id); break;				case "paper":	unit = new Paper(player.id); break;				case "scissor": unit = new Scissor(player.id); break;			}			this.units.push(unit);			trace("Unit of type " + type+ " constructed");			player.addUnit(unit);					view.tintArray(unit.tintElements,player.color,1);						return unit;					}	}	}