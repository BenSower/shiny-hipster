package  {			public class Player {		public static var counter:int = 0;		var id:int;		var color:uint;		//var name:String; Feature		var units:Array;		var base:Base;		var conqueredTiles:Array;		var light:int = 10;						public function Player(c:uint) {			this.color = c;			id = counter;			counter++;			units = new Array();		}				public function addUnit(unit :Unit){			units.push(unit);		}				public function addLight(i:int):void{			this.light += i;		}				public function removeLight(i:int):void{			if(light >= i) this.light -= i;		}				public function getLight():int{			return this.light;		}			}	}