package  {	import flash.events.MouseEvent;		public class Controller {		var model:Model;		public function Controller(m:Model) {			this.model = m;		}		public function gridClickHandler(evt:MouseEvent){			var w:Number = model.grid.getTile(0,0).width;			var h:Number = model.grid.getTile(0,0).height;						var gx:int = (Math.floor(evt.stageX/w)-1);			var gy:int = (Math.floor(evt.stageY/h)-1);			model.grid.getTile(gx,gy).alpha = 0.3;		}	}	}