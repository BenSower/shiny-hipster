package  {	import flash.events.MouseEvent;		public class Controller {		var selectedElement: Element;		var targetTile: Tile;		var model:Model;		public function Controller(m:Model) {			this.model = m;		}		public function gridClickHandler(evt:MouseEvent):void{			var w:Number = model.grid.getTile(0,0).width;			var h:Number = model.grid.getTile(0,0).height;						var gx:int = (Math.floor(evt.stageX/w)-1);			var gy:int = (Math.floor(evt.stageY/h)-1);			handleElement(model.grid.getTile(gx,gy));		}				public function handleElement(t:Tile):void{			if(t.getElement() != null){				selectedElement= t.getElement();				//check was fürn typ!								trace(selectedElement is Unit);							}			if(t.getElement() == null && selectedElement is Unit){				targetTile = t;				var u:Unit = selectedElement as Unit;				u.gotoTarget(t.gx,t.gy);				selectedElement = null;				targetTile = null;				trace(t);			}		}	}	}