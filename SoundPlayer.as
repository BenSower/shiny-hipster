package  {		import flash.media.Sound;	import flash.media.SoundChannel;	import flash.utils.getDefinitionByName;	import flash.events.Event;	public class SoundPlayer {		var soundChannel : SoundChannel;		var soundName:String;				public function SoundPlayer() {			// constructor code		}				public function playSound(soundName:String){			this.soundName = soundName;			var SoundClass:Class = getDefinitionByName(soundName) as Class;			var sound:Sound = new SoundClass() as Sound;			this.soundChannel = sound.play();		}				public function playAndRepeatSound(soundName:String){			playSound(soundName);			this.soundChannel.addEventListener(Event.SOUND_COMPLETE, onComplete);		}				public function onComplete(event:Event){			SoundChannel(event.target).removeEventListener(event.type, onComplete);    		playAndRepeatSound(this.soundName)		}		public function stopSound(){			this.soundChannel.stop();		}					}	}